<van-cell-group>
  <view class="title">{{title}}</view>
  <van-field
    model:value="{{ username }}"
    required
    clearable
    error="{{flag}}"
    label="真实姓名"
    placeholder="请输入姓名"
    bind:click-icon="onClickIcon"
    bind:change="onChangeName"
  />
  <van-field
    model:value="{{ phone }}"
    label="手机号"
    required
    clearable
    placeholder="请输入手机号"
    error-message="{{phoneMsg}}"
    bind:change="onChangePhone"
    border="{{ false }}"
  />
  <van-field
    model:value="{{ smsCode }}"
    center
    clearable
    label="短信验证码"
    placeholder="请输入短信验证码"
    error="{{smsflag}}"
    border="{{ false }}"
    bind:change="onChangeSms"
    use-button-slot>
    <van-button round  slot="button" size="small"
    disabled="{{disabled}}" type="primary" bindtap="sendSms">{{smsTitle}}</van-button >
  </van-field>
  
  <van-button round   block color="#7232dd" bindtap='_success'>提交</van-button>
</van-cell-group>
