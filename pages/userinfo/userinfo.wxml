<van-cell-group>
  <view wx:if="{{auth=='true'}}">
    <view class="title">{{title}}</view>
    <van-field
      model:value="{{ userinfo.username }}"
      required
      clearable
      error="{{flag}}"
      label="真实姓名"
      placeholder="请输入姓名"
      bind:click-icon="onClickIcon"
      bind:change="onChangeName"
    />
    <van-field
      model:value="{{ userinfo.mobile }}"
      label="手机号"
      required
      clearable
      placeholder="请输入手机号"
      error-message="{{mobileMsg}}"
      bind:change="onChangemobile"
      border="{{ false }}"
    />
    <van-field
      model:value="{{ smsCode }}"
      center
      clearable
      label="短信验证码"
      placeholder="请输入短信验证码"
      error="{{smsflag}}"
      border="{{ false }}"
      bind:change="onChangeSms"
      use-button-slot>
      <van-button round  slot="button" size="small"
      disabled="{{disabled}}" type="primary" bindtap="sendSms">{{smsTitle}}</van-button >
    </van-field>
    <van-button round   block color="#7232dd" bindtap='_success'>提交</van-button>
  </view>
  <view wx:else>
    <view class="title">个人信息</view>
    <van-cell title="微信名称" >
      <open-data type="userNickName"></open-data>
    </van-cell>
    <van-cell title="真实姓名" value="{{userinfo.username}}" />
    <van-cell title="手机号" value="{{userinfo.mobile}}" />
    <van-cell title="区域正常">
      <van-tag medium type="success" wx:if="{{userinfo.isarea==0}}">正常</van-tag>
      <van-tag medium type="warning" wx:elif="{{userinfo.isarea==1}}">警告</van-tag>
      <van-tag medium type="danger" wx:elif="{{userinfo.isarea==2}}">危险</van-tag>
    </van-cell>
    <van-cell title="体温正常">
      <van-tag medium type="success" wx:if="{{userinfo.istemperature==0}}">正常</van-tag>
      <van-tag medium type="warning" wx:elif="{{userinfo.istemperature==1}}">警告</van-tag>
      <van-tag medium type="danger" wx:elif="{{userinfo.istemperature==2}}">危险</van-tag>
    </van-cell>
    <van-cell title="接触正常">
      <van-tag medium type="success" wx:if="{{userinfo.istouch==0}}">正常</van-tag>
      <van-tag medium type="warning" wx:elif="{{userinfo.istouch==1}}">警告</van-tag>
      <van-tag medium type="danger" wx:elif="{{userinfo.istouch==2}}">危险</van-tag>
    </van-cell>
  </view>
</van-cell-group>
